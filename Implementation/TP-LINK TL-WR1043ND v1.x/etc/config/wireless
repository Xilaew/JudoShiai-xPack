
config wifi-device 'radio0'
	option type 'mac80211'
	option hwmode '11g'
	option path 'platform/ath9k'
	option htmode 'HT20'
	option channel 'auto'
	option country 'DE'
	option txpower '20'

config wifi-iface
	option device 'radio0'
	option network 'lan'
	option mode 'ap'
	option ssid 'judoshiai'
	option encryption 'psk2'
	option key 'IchBinKampfrichter'
	option hidden '1'

config wifi-iface
	option device 'radio0'
	option mode 'ap'
	option encryption 'none'
	option ssid 'turnierinfo'
	option network 'public'

